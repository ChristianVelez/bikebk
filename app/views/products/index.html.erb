<p id="notice"><%= notice %></p>

<h3 class="product-heading">our collection</h3>

<table class = "products">

<div class="container">
  <div class="row text-center">
    <% @products.each do |product| %>
      <div class=" col-sm-6 col-md-6 col-lg-4  product-listings" id="featured">
        
        <%= link_to image_tag(product.image_url, class: "img-responsive prod-img"), product %>
        <h4><%= product.name %></h4>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p>Starting at $<%= product.price %></p>

      </div><!-- /col -->
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
