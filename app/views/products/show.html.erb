<div class="container">
<div class="row tex-center">
<div class="col-md-6 top review1">
<p id="notice"><%= notice %></p>

  <%= image_tag(@product.image_url, class: "img-responsive show-img prod-img") %>


<p>
  <h3><%= @product.name %></h3>
</p>

<p>
  
  <%= @product.description %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Price: $</strong>
  <%= @product.price %>
</p>

<p>Average Rating: 
  <div class="rated" data-score="<%= @product.average_rating %>"></div>
</p>

<p>
  <div class="stripe">
    <%= form_tag "/payments/create" do %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
  </div>
</p>

</div>
<div class="col-md-4 col-md-offset-1 top review">
<%= render 'new_comment' %>

<%= render 'comments' %>
</div>
<% link_to 'Edit', edit_product_path(@product) %> 
<% link_to 'Back', products_path %>


</div>
</div>