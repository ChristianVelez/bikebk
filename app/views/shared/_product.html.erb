<% cache product do %>
<div class=" col-sm-6 col-md-6 col-lg-4  product-listings" id="featured">
  <%= link_to image_tag(product.image_url, class: "img-responsive prod-img img-zoom", data_zoom_image: product.image_url ), product %>
  <p class="lead"><strong><%= product.name %></strong></p>
  <p><%= product.description %></p>
  <p><%= product.color %></p>
  <p>Starting at $<%= product.price %></p>
</div><!-- /col -->
<% end %>