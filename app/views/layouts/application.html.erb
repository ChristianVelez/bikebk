<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    
    <% render 'favicon' %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Varela+Round', media: 'all', 'data-turbolinks-track' => true %>
    <%= action_cable_meta_tag %>
    <%= javascript_include_tag 'application'%>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
  </head>

  <body>

    <%= render 'shared/navbar' %>

    <div class="wrapper">
      <%= yield %>
      <% if alert %>
      <div class="hi alert alert-danger alert-dismissible fade in" role="alert"> <%= alert %> </div>
      <% end %>
      <% if notice %>
      <div class=" hi alert alert-info alert-dismissible fade in" id="notice" role="alert"> <%= notice %> </div>
     <% end %>
    </div>

   <%= render 'shared/footer' %>
  </body>
</html>